<simulation>
  <control>
    <duration>120</duration>
    <startmonth>1</startmonth>
    <startyear>2018</startyear>
    <decay>never</decay>
  </control>

  <archetypes>
    <spec> <lib>cycamore</lib><name>Reactor</name> </spec>
    <spec> <lib>cycamore</lib><name>GrowthRegion</name> </spec>
    <spec> <lib>cycamore</lib><name>DeployManagerInst</name> </spec>
    <spec> <lib>cycamore</lib><name>ManagerInst</name> </spec>
  </archetypes>

  <commodity>
    <name>fresh_uox</name>
    <solution_priority>1.0</solution_priority>
  </commodity>
  <commodity>
    <name>spent_uox</name>
    <solution_priority>1.0</solution_priority>
  </commodity>
  
  <recipe>
    <name>fresh_uox</name>
    <basis>mass</basis>
    <nuclide>
      <id>92235</id>
      <comp>0.04</comp>
    </nuclide>
    <nuclide>
      <id>92238</id>
      <comp>0.96</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>spent_uox</name>
    <basis>mass</basis>
    <nuclide>
      <id>92235</id>
      <comp>0.0011</comp>
    </nuclide>
    <nuclide>
      <id>92238</id>
      <comp>0.94</comp>
    </nuclide>
    <nuclide>
      <id>94239</id>
      <comp>0.009</comp>
    </nuclide>
    <nuclide>
      <id>55137</id>
      <comp>0.04</comp>
    </nuclide>
  </recipe>
  

  <facility>
    <name>Reactor_type1</name>
    <lifetime>54</lifetime>
    <config>
      <Reactor>
        <fuel_incommods> <val>fresh_uox</val> </fuel_incommods>
        <fuel_inrecipes> <val>fresh_uox</val> </fuel_inrecipes>
        <fuel_outcommods> <val>spent_uox</val> </fuel_outcommods>
        <fuel_outrecipes> <val>spent_uox</val> </fuel_outrecipes>
        <cycle_time>18</cycle_time>
        <refuel_time>1</refuel_time>
        <assem_size>33000</assem_size>
        <n_assem_core>3</n_assem_core>
        <n_assem_batch>1</n_assem_batch>
        <power_cap>1200</power_cap>
      </Reactor>
      </config>  
  </facility>

  <facility>
    <name>Reactor_type2</name>
    <lifetime>54</lifetime>
    <config>
      <Reactor>
        <fuel_incommods> <val>fresh_uox</val> </fuel_incommods>
        <fuel_inrecipes> <val>fresh_uox</val> </fuel_inrecipes>
        <fuel_outcommods> <val>spent_uox</val> </fuel_outcommods>
        <fuel_outrecipes> <val>spent_uox</val> </fuel_outrecipes>
        <cycle_time>18</cycle_time>
        <refuel_time>1</refuel_time>
        <assem_size>3300</assem_size>
        <n_assem_core>3</n_assem_core>
        <n_assem_batch>1</n_assem_batch>
        <power_cap>120</power_cap>
      </Reactor>
      </config>  
  </facility>

  <region>
    <name>United States</name>
    <config>
    <GrowthRegion>
      <growth>
        <item>
          <commod>power</commod>
          <piecewise_function>
            <piece>
              <start>50</start>
              <function>
                <type>linear</type>
                <params>0 1200</params>
              </function>
            </piece>
          </piecewise_function>
        </item>
      </growth>
      </GrowthRegion>
    </config>
    
    <institution>
      <name>FuelCycle</name>
      <config>
        <ManagerInst>
          <prototypes>
            <val>Reactor_type2</val>
          </prototypes>
        </ManagerInst>
      </config>
    </institution>

    <institution>
      <name>UNITED_STATES_OF_AMERICA</name>
      <config>
        <DeployManagerInst>
          <prototypes>
            <val>Reactor_type1</val>
          </prototypes>
          <build_times>
            <val>10</val>
          </build_times>
          <n_build>
            <val>1</val>
          </n_build>
        </DeployManagerInst>
      </config>
    </institution>
  </region>

</simulation>
